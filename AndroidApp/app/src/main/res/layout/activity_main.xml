<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:text="Séléction des matières :"
        android:textColor="#000000"
        android:textSize="30dp" />

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:background="#000000"
        android:backgroundTint="#000000"></View>

    <CheckBox
        android:id="@+id/checkboxInformatique"
        android:layout_width="358dp"
        android:layout_height="125dp"
        android:text="Mathématiques"></CheckBox>

    <CheckBox
        android:id="@+id/checkboxPhysique"
        android:layout_width="358dp"
        android:layout_height="125dp"
        android:text="Physique"></CheckBox>

    <CheckBox
        android:id="@+id/checkboxInformatique"
        android:layout_width="358dp"
        android:layout_height="125dp"
        android:text="Informatique"></CheckBox>

    <Button
        android:id="@+id/buttonValider"
        android:layout_width="358dp"
        android:layout_height="90dp"
        android:layout_margin="30dp"
        android:background="@drawable/border"
        android:text="Valider" />

</LinearLayout>