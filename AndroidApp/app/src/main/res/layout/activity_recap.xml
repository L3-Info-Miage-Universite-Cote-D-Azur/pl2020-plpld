<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.activity.RecapActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Récapitulatif"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Semestre 1:"
                    android:textColor="@android:color/holo_red_light"></TextView>

                <TextView
                    android:id="@+id/semestre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0228FD"
                    android:text="Matières choisies au s1">
                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Semestre 2:"
                    android:textColor="@android:color/holo_red_light"></TextView>

                <TextView
                    android:id="@+id/semestre2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0228FD"
                    android:text="Matières choisies au s2">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Semestre 3:"
                    android:textColor="@android:color/holo_red_light"></TextView>

                <TextView
                    android:id="@+id/semestre3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0228FD"
                    android:text="Matières choisies au s3">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent" 
                    android:layout_height="match_parent"
                    android:text="Semestre 4:"
                    android:textColor="@android:color/holo_red_light"></TextView>

                <TextView
                    android:id="@+id/semestre4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0228FD"
                    android:text="Matières choisies au s4">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <Button
        android:id="@+id/RetourArriereRecap"
        android:layout_width="358dp"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_button"
        android:text="Recommencer mon parcours" />

        <Button
            android:id="@+id/buttonConfirmation"
            android:layout_width="358dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button"
            android:textSize="20sp"
            android:text="Finaliser mon inscription" />

        <Button
            android:id="@+id/buttonPartager"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignRight="@id/buttonConfirmation"
            android:layout_marginTop="170dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Partager"/>
    </RelativeLayout>

</LinearLayout>
